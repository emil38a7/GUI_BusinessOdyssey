<UserControl x:Class="GUI_BusinessOdyssey.GUI.Find_Winnercontroller"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GUI_BusinessOdyssey.GUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="8*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="25*" />
        </Grid.ColumnDefinitions>
        <Label Grid.ColumnSpan="3" Content="Winners" VerticalAlignment="Top" HorizontalContentAlignment="Center" FontWeight="Bold" FontSize="25" ></Label>
        <Label Content="Semifinal winners" Grid.Row="1" ></Label>
        <Label Content="Final winner" Grid.Row="1" Grid.Column="3"></Label>
        <ListView Grid.Row="2" ItemsSource="{Binding TrackWinners}" Margin="5">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <WrapPanel>
                        <TextBlock Text="Track" Width="75"></TextBlock>
                        <ListView ItemsSource="{Binding}">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <WrapPanel>
                                        <TextBlock Text="{Binding TrackId}" Width="75" FontWeight="Bold" />
                                        <TextBlock Text="Group: " Width="75" />
                                        <TextBlock Text="{Binding SGroupName}" Width="75" FontWeight="Bold" />
                                        <TextBlock Text="Points: " Width="75" />
                                        <TextBlock Text="{Binding Points}" Width="75" FontWeight="Bold" />
                                    </WrapPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </WrapPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <ListView  Name="lvUsers" ItemsSource="{Binding FinalWinners}" Margin="5" Grid.Row="2" Grid.Column="2" >
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Track" Width="120" DisplayMemberBinding="{Binding TrackId}" />
                    <GridViewColumn Header="Group" Width="50" DisplayMemberBinding="{Binding SGroupName}" />
                    <GridViewColumn Header="Points" Width="150" DisplayMemberBinding="{Binding Points}">
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>
